<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:columnCount="4"
    android:rowCount="2">

    <TextView
        android:id="@+id/schedule_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="08:00"
        android:textColor="#9DA9B7"
        android:textSize="12dp" />

    <TextView
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="10dp" />

    <TextView
        android:id="@+id/schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginTop="30dp"
        android:text="专业英语"
        android:textColor="#9DA9B7"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/schedule_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:text="09:40"
        android:textColor="#9DA9B7"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/schedule_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:paddingBottom="10dp"
        android:text="第3-4节|学友楼401|刘美玲"
        android:textColor="#9DA9B7"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/schedule_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="30dp"
        android:text="已下课"
        android:textColor="#9DA9B7"
        android:textSize="12dp" />

</GridLayout>
